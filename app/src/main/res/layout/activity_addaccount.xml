<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#65BCF3"
    tools:context=".addAccount" >

    <EditText
        android:id="@+id/introLogin"
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/new_edit_text"
        android:ems="10"
        android:hint="Login"
        android:inputType="textPersonName"
        android:padding="6dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/introPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/new_button"
        android:text="Nowe konto"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/onClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introPassword" />

    <EditText
        android:id="@+id/introPassword"
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/new_edit_text"
        android:ems="10"
        android:hint="HasÅ‚o"
        android:inputType="textPassword"
        android:padding="6dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introLogin" />

    <Button
        android:id="@+id/onClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="149dp"
        android:background="@drawable/new_button"
        android:onClick="onClose"
        android:text="Cofnij"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>